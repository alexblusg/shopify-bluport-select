<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
  //show bluPort list if bluPort delivery method selected
  $('input[type="radio"]').click(function(){
        if($(this).attr("id")=="deliverhome"){
            $("#bluportlist").hide();
        }
        if($(this).attr("id")=="deliverbluport"){
            $("#bluportlist").show();

        }        
    });
</script>

<script>
  //add bluport-pickup cart attribute if bluport delivery is selected, otherwise remove bluport-pickup cart attribute
$('input:radio[name="attributes[deliverymethod]"]').change(
    function(){
        if ($(this).val() == 'deliverbluport') {
            $("#choose-bluport").attr("name", "attributes[bluport-pickup]");
        }
        else {
            $("#choose-bluport").removeAttr('name');
        }
    });
</script>

<script>
  //prevent submission of cart if no delivery method selected at cart
$(document).ready(function () {
    $("#cart-checkout").click(function (e) {
        var none_answered = true;
        $("input:radio").each(function () {
            var name = $(this).attr("name");
            if ($("input:radio[name]:checked").length == 0) {
                e.preventDefault();
                none_answered = false;
            }
        });
        if (none_answered == false) {
            $('#noradio').html("Please confirm a delivery method");
        }
    })  
});
</script>
